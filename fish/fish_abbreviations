abbr -ag dm $HOME/Documents
abbr -ag ds $HOME/Desktop
abbr -ag dw $HOME/Downloads

abbr -ag vimrc $XDG_CONFIG_HOME/nvim
abbr -ag fishrc $XDG_CONFIG_HOME/fish
abbr -ag gitrc $XDG_CONFIG_HOME/git/config
abbr -ag tmuxrc $XDG_CONFIG_HOME/tmux/tmux.conf
abbr -ag kittyrc $XDG_CONFIG_HOME/kitty/kitty.conf
abbr -ag tridactylrc $XDG_CONFIG_HOME/tridactyl/trydactylrc
abbr -ag xmonadrc $XDG_CONFIG_HOME/xmonad/xmonad.hs
abbr -ag xmobarrc $XDG_CONFIG_HOME/xmonad/xmobarrc

abbr -ag :q exit
abbr -ag l ls -h1G
abbr -ag la ls -Ahl
abbr -ag mv mv -v
abbr -ag cp cp -r
abbr -ag rm rm -rf
abbr -ag scp scp -r
abbr -ag mkdir mkdir -p
abbr -ag zip zip -r
abbr -ag sbt sbtn --color=always
abbr -ag rsync rsync --recursive --progress --archive

abbr -ag merge_history history --merge
abbr -ag sync_config source $XDG_CONFIG_HOME/fish/config.fish
abbr -ag tmux_update $XDG_CONFIG_HOME/tmux/plugins/tpm/bin/update_plugins all
